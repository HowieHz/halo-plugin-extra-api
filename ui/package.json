{
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm run \"/^watch:.*/\"",
    "watch:rsbuild": "rsbuild build --watch --env-mode=development",
    "build": "run-p build:type-check \"build:build-only {@}\" --",
    "build:type-check": "vue-tsc --build",
    "build:build-only": "rsbuild build",
    "lint": "run-s lint:*",
    "lint:oxlint": "oxlint . --fix -D correctness --ignore-path .gitignore",
    "lint:eslint": "eslint . --fix",
    "format": "pnpm run \"/^format:.*/\"",
    "format:prettier": "prettier --write src/",
    "test": "pnpm run \"/^test:.*/\"",
    "test:unit": "vitest --passWithNoTests",
    "prepare": "cd .. && husky ui/.husky"
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2
  },
  "dependencies": {
    "@halo-dev/api-client": "^2.22.0",
    "@halo-dev/components": "^2.22.0",
    "@halo-dev/ui-shared": "^2.22.0",
    "axios": "^1.13.2",
    "canvas-confetti": "^1.9.4",
    "husky": "^9.1.7",
    "vue": "^3.5.26"
  },
  "devDependencies": {
    "@halo-dev/ui-plugin-bundler-kit": "^2.22.0",
    "@iconify/json": "^2.2.422",
    "@rsbuild/core": "^1.6.15",
    "@rsbuild/plugin-sass": "^1.4.0",
    "@tsconfig/node20": "^20.1.8",
    "@types/canvas-confetti": "^1.9.0",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^25.0.3",
    "@vitest/eslint-plugin": "^1.6.4",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.8.1",
    "eslint": "^9.39.2",
    "eslint-plugin-oxlint": "^1.36.0",
    "eslint-plugin-vue": "~10.6.2",
    "husky": "^8.0.0",
    "jsdom": "^27.4.0",
    "npm-run-all2": "^8.0.4",
    "oxlint": "^1.36.0",
    "prettier": "^3.7.4",
    "sass": "^1.97.1",
    "typescript": "~5.9.3",
    "unplugin-icons": "^22.5.0",
    "vitest": "^4.0.16",
    "vue-tsc": "^3.2.1"
  },
  "packageManager": "pnpm@10.2.0"
}
